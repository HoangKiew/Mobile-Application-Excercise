<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFEEF4">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="BTVN TUẦN 2"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btnBai1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnBai1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thực hành 1"
        android:backgroundTint="#FFA6C9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnBai2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginHorizontal="48dp"
        android:layout_marginVertical="12dp" />

    <Button
        android:id="@+id/btnBai2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thực hành 2"
        android:backgroundTint="#FFA6C9"
        app:layout_constraintTop_toBottomOf="@+id/btnBai1"
        app:layout_constraintBottom_toTopOf="@+id/btnBai3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="48dp"
        android:layout_marginVertical="12dp" />

    <Button
        android:id="@+id/btnBai3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thực hành 3"
        android:backgroundTint="#FFA6C9"
        app:layout_constraintTop_toBottomOf="@+id/btnBai2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="48dp"
        android:layout_marginVertical="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
